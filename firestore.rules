rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar autenticación
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Función helper para verificar propiedad
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer cualquier perfil público (para búsqueda por email)
      allow read: if isSignedIn();
      
      // Solo el dueño puede escribir su propio perfil
      allow write: if isOwner(userId);
      
      // Permitir actualización de fcmTokens y lastTokenUpdate
      allow update: if isOwner(userId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fcmTokens', 'lastTokenUpdate']);
      
      // Subcolección de solicitudes de contacto
      match /contactRequests/{requestId} {
        // El dueño puede leer sus propias solicitudes
        allow read: if isOwner(userId);
        
        // Cualquier usuario autenticado puede crear una solicitud para otro usuario
        allow create: if isSignedIn();
        
        // Solo el dueño puede eliminar sus solicitudes (aceptar/rechazar)
        allow delete: if isOwner(userId);
      }
      
      // Subcolección de dispositivos
      match /devices/{deviceId} {
        // El dueño puede leer/escribir sus propios dispositivos
        allow read, write: if isOwner(userId);
        
        // Los contactos de emergencia o viewers pueden leer el dispositivo (incluyendo lastLocation)
        allow read: if isSignedIn() && (
          request.auth.uid in resource.data.get('emergencyContacts', []) ||
          request.auth.uid in resource.data.get('viewerUids', [])
        );
        
        // Permitir update solo si se está añadiendo al array de emergencyContacts, viewerUids, o monitored_devices
        allow update: if isSignedIn() && 
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['emergencyContacts', 'viewerUids', 'monitored_devices']);
        
        // Subcolección de historial de alertas del dispositivo
        match /alertHistory/{alertId} {
          // El dueño puede leer y escribir su historial
          allow read, write: if isOwner(userId);
          
          // Los contactos de emergencia pueden leer el historial
          allow read: if isSignedIn();
        }
        
        // Subcolección de alertas (para doble-disparo SOS)
        match /alerts/{alertId} {
          // El dueño puede leer y escribir
          allow read, write: if isOwner(userId);
          
          // Viewers y emergencyContacts pueden leer
          allow read: if isSignedIn() && (
            request.auth.uid in resource.data.get('viewerUids', []) ||
            request.auth.uid in resource.data.get('emergencyContacts', [])
          );
        }
      }
      
      // Subcolección de alertas recibidas (como contacto de emergencia)
      match /receivedAlerts/{alertId} {
        // El usuario puede leer y escribir sus alertas recibidas
        allow read, write: if isOwner(userId);
        
        // Otros usuarios pueden crear alertas (cuando envían SOS)
        allow create: if isSignedIn();
      }
    }
    
    // Colección system (para OTA y configuración global)
    match /system/{document=**} {
      allow read: if isSignedIn();
      allow write: if false; // Solo admin desde consola
    }
    
    // Regla especial para collectionGroup query de devices
    // Permite buscar dispositivos donde el usuario es el dueño o viewer
    match /{path=**}/devices/{deviceId} {
      allow read: if isSignedIn() && (
        resource.data.get('ownerUid', '') == request.auth.uid ||
        request.auth.uid in resource.data.get('viewerUids', []) ||
        request.auth.uid in resource.data.get('emergencyContacts', [])
      );
    }
  }
}
